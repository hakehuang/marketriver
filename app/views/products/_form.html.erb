<%= stylesheet_link_tag "display.css" %>
<%= form_for(@product) do |f| %>
  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% @product.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label t(:name) %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label t(:title) %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label t(:content) %><br />
    <%= f.text_area :content %>
  </div>
  <div class="field">
    <%= f.label t(:status) %><br />
    <%= f.select :status, @status %>
  </div>
  <div class="field">
    <%= f.label t(:price) %><br />
    <%= f.text_field :price %>
  </div>

   <div class="field">
     <%= f.label t(:sharemode)  %><br />
     <%= f.select :sharemode, @sharemode %>
     <!--%= f.select_tag options_from_collection_for_select(@sharemode, 'id', 'name') %-->
   </div>
      
   <div class="field">
     <%= f.label t(:prompt)  %><br />
     <%= f.check_box :prompt  %>
   </div>

  <div class="field">
    <%= f.label t(:types) %><br />
  <%= f.collection_select(:cata_level_1,  @catalog1_list,  :id, :tname,
                      {:prompt   => @current_cata1?@current_cata1: t(:selectproducttype)} ) %>
                   <!-- {:onchange => "#{remote_function(:url  => {:action => "update_cata_level_2"},:with => "'cata_level_1='+value")}"}) %-->
<br/>
    <%= f.label t(:cataloges) %><br />
    <div id="cata_level_2"><%= render :partial => 'cata_level_2', :locals => { :form => f } ,:object => @catalog2_list %></div>
  </div>
  <div class="field">
   <!--  <%= f.label :user_id %><br /> -->
<%= hidden_field 'user','id', :value => params[:user_id] %>
  </div>
  <div class="actions">
  <% if @isnew %>
    <%= f.submit t(:nextstep) %>
  <% else %>
    <%= f.submit t(:confirming) %>
  <% end %>
  </div>
<% end %>
