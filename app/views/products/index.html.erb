<ul>
<% @products.each do |product| %>
<div id="products">
     <li id="products">
	<% product.DataFiles.each do |image| %>
 		<li><%= link_to image_tag(image.path),product %></li>
		<li><%= product.name %></li> 
                <li>$<%= product.price %></li>
               <% if  request.request_uri == "/" %>
                <% break %>
               <% end %>
	<% end %>    
    </li>
</div>
<% end %>
</ul>
