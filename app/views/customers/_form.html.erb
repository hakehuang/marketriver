<%= stylesheet_link_tag "display.css" %>
<%= form_for(@customer) do |f| %>
  <% if @customer.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@customer.errors.count, "error") %> prohibited this customer from being saved:</h2>

      <ul>
      <% @customer.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label t(:nickname) %><br />
    <%= f.text_field :nickname %>
  </div>
  <div class="field">
    <%= f.label t(:phone) %><br />
    <%= f.text_field :phone %>
  </div>
  <div class="field">
    <%= f.label t(:credit) %><br />
    <%= f.text_field :credits ,:disabled => "if $('session[user]').value != 'admin' disabled"%>
  </div>
  <div class="field">
    <%= f.label t(:maintenance) %><br />
    <%= f.text_field :maintenance %>
  </div>
  <div class="field">
    <%= f.label t(:status) %><br />
    <%= f.check_box :Status %>
  </div>
  <div class="field" >
    <%= f.label t(:user) %><br />
    <%= f.text_field :user_id, :disabled => "disabled",:class=>'textbg' %>
  </div>
  <div class="field" >
    <%= f.label t(:address) %><br />
    <%= f.text_field :address %>
  </div>
  <div class="field" >
    <%= f.label t(:personalid) %><br />
    <%= f.text_field :personalID %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
