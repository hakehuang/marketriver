<h2><%= t(:signup) %></h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <p><%= f.label t(:email) %><br />
  <%= f.email_field :email %></p>

  <p><%= f.label t(:passwd) %><br />
  <%= f.password_field :password %></p>

  <p><%= f.label t(:password_confirmation) %><br />
  <%= f.password_field :password_confirmation %></p>

   
  <p><%= f.label t(:servicerule) %><br />
  <%= text_area_tag "servicerule", t(:servicerule), { :escape => false , :size => "25x10", :class => "content", :readonly =>""} %>

  <p><%= f.submit t(:signup) %></p>
<% end %>

<%= render :partial => "devise/shared/links" %>
